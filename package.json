{
  "name": "chat-relay",
  "version": "1.0.0",
  "description": "Cross-platform chat relay service for Telegram, Discord, and Twitch",
  "main": "dist/index.js",
  "scripts": {
    "start": "node scripts/start-production.js",
    "start:prod": "node scripts/start-production.js",
    "dev": "node scripts/start-with-deletion-detector.js",
    "dev:watch": "tsx watch src/index.ts",
    "dev:no-deletion": "tsx src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "init-db": "tsx src/database/init.ts",
    "deletion-bot": "cd deletion_detector && python bot.py",
    "install-python": "cd deletion_detector && pip install -r requirements.txt",
    "stop": "pkill -f 'tsx.*src/index.ts|deletion_detector/bot.py' || true",
    "status": "ps aux | grep -E 'tsx.*src/index.ts|deletion_detector/bot.py' | grep -v grep || echo 'No relay processes running'"
  },
  "keywords": [
    "telegram",
    "discord",
    "twitch",
    "relay",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/ioredis": "^4.28.10",
    "axios": "^1.7.8",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "node-telegram-bot-api": "^0.66.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "tmi.js": "^1.8.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.1.0",
    "@types/node-telegram-bot-api": "^0.64.9",
    "@types/tmi.js": "^1.8.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
