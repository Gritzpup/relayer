{
  "name": "chat-relay",
  "version": "1.0.0",
  "description": "Cross-platform chat relay service for Telegram, Discord, and Twitch",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
